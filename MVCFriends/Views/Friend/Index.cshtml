@model List<Friend>

<h2>List of Friends</h2>

@if (Model == null)
{
    <p>There was an error loading the list of friends.</p>
}
else if (Model.Count == 0)
{
    <p>No friends found.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Place</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var friend in Model)
            {
                <tr>
                    <td>@friend.FriendId</td>
                    <td>@friend.FriendName</td>
                    <td>@friend.Place</td>
                </tr>
            }
        </tbody>
    </table>
}



